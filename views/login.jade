extends layout

block content
	div.row
		div.col-lg-2
			div
				p Please enter your User ID below:
				form.form-horizontal(ng-submit="login()" ng-controller="loginController")
					fieldset
						.form-group
							label.col-lg-4.control-label(for="userId") User ID:
							.col-lg-8
								input.form-control(id="userId", ng-model="userId")
						.form-group
							.col-lg-4.col-lg-offset-8
								button.btn.btn-primary.form-control(type="submit") Login
