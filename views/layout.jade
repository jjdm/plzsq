doctype html
html(lang='en', ng-app="plzsq")
	head
		title= title
		if useCdn
			link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.7/flatly/bootstrap.min.css')
		else
			link(rel='stylesheet', href='/css/flatly.bootstrap.min.3.3.7.css')
		link(rel='stylesheet', href='/css/plzsq.css')
	body
		nav.navbar.navbar-default
			div.container-fluid
				div.navbar-header
					div.navbar-brand
						img(src='/img/plazasq.svg', alt='Plaza Square')
						span= title
				div
					ul.nav.navbar-nav.navbar-right
						li
							p.navbar-text Link
		div.container-fluid
			block content
		if useCdn
			script(type='text/javascript' src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js')
			script(type='text/javascript' src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular-cookies.min.js')
			script(type='text/javascript' src='//code.jquery.com/jquery-3.1.1.min.js')
			script(type='text/javascript' src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
			script(type='text/javascript' src='//cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/12.2.13/ng-file-upload.min.js')
		else
			script(type='text/javascript' src='/js/angular.1.5.7.min.js')
			script(type='text/javascript' src='/js/angular-cookies.1.5.7.min.js')
			script(type='text/javascript' src='/js/jquery-3.1.1.min.js')
			script(type='text/javascript' src='/js/bootstrap.3.3.7.min.js')
			script(type='text/javascript' src='/js/ng-file-upload.12.2.13.min.js')
		script(type='text/javascript' src='/js/canvasjs.1.7.0.min.js')
		script(type='text/javascript' src='/app/app.js')
		script(type='text/javascript' src='/app/controllers.js')
		script(type='text/javascript' src='/app/services.js')
